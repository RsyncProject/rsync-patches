 	  case CSUM_MD5:
 		md5_update(&ctx.m5, (uchar *)p, len);
@@ -611,6 +664,11 @@ void sum_end(char *sum)
 		SIVAL64(sum, 8, digest.high64);
 		break;
 	  }
+#endif
+#ifdef SHA_DIGEST_LENGTH
+	  case CSUM_SHA1:
+		SHA1_Final((uchar *)sum, &ctx.sha);
+		break;
 #endif
