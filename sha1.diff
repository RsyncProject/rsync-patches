+#endif
+#ifdef SHA_DIGEST_LENGTH
+	  case CSUM_SHA1:
+		SHA1_Init(&ctx.sha);
+		break;
 #endif
 	  case CSUM_MD5:
 		md5_begin(&ctx.m5);
@@ -546,6 +594,11 @@ void sum_update(const char *p, int32 len)
 	  case CSUM_XXH3_128:
