+		execvp(command[0], command);
+		rsyserr(FERROR, errno, "Failed to exec %s",
+			safe_fname(command[0]));
+		exit_cleanup(RERR_IPC);
+	}
+
+	if (close(pipefds[0]) < 0) {
+		rsyserr(FERROR, errno, "Failed to close");
+		exit_cleanup(RERR_IPC);
+	}
+
+	*pipe_to_filter = pipefds[1];
+
+	return pid;
